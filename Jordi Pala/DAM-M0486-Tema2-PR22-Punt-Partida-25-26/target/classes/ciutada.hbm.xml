<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.project.Ciutada" table="Ciutada">

        <id name="ciutadaId" type="long" column="ciutadaId">
            <generator class="native"/>
        </id>

        <property name="nom" column="nom"/>
        <property name="cognom" column="cognom"/>
        <property name="edat" column="edat" />

        <!-- Relació lògica -->
        <property name="ciutatId" column="ciutatId" type="long"/>

    </class>

</hibernate-mapping>
